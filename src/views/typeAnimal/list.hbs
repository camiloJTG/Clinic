<div class="container p-4">
    <div class="row">
        {{#each data}}
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="card border-warning mb-3" style="max-width: 18rem;">
                    <div class="card-header text-center">{{id_type_animal}}</div>
                    <div class="card-body text-center">
                        <h5 class="card-title text-center text-uppercase"><strong>{{description_type_animal}}</strong></h5>
                        <td><a href="/typeAnimal/delete/{{id_type_animal}}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a></td>
                        <a href="/typeAnimal/edit/{{id_type_animal}}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
