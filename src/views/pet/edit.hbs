<div class="container p-4">
    <div class="row">
        <div class="mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/pets/edit/{{pet.id_pet}}" method="post">
                        <div class="form-group">
                            <h3 class="text-center"> <strong>Edit Pets</strong></h3>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="name_pet" placeholder="Nombre" value="{{pet.name_pet}}" autofocus required>
                        </div>
                        <div class="form-group">
                            <select name="id_clients" id="id_clients" class="form-control">
                                <option value="{{pet.id_clients}}">{{pet.name_clients}}</option>
                                {{#each client}}
                                <option value="{{id_clients}}">{{name_clients}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <select name="id_type_animal" id="id_type_animal" class="form-control">
                                <option value="{{pet.id_type_animal}}">{{pet.description_type_animal}}</option>
                                {{#each animal}}
                                <option value="{{id_type_animal}}">{{description_type_animal}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group text-center">
                            <button class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>