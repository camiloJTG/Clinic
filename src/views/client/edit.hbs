<div class="container p-4">
    <div class="row">
        <div class="mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/clients/edit/{{data.id_clients}}" method="post">
                        <div class="form-group">
                            <h3 class="text-center"> <strong>Edit Clients</strong></h3>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="name_clients" placeholder="Nombre" value="{{data.name_clients}}" autofocus required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="last_name_clients" placeholder="Apellido" value="{{data.last_name_clients}}" autofocus required>
                        </div>
                        <div class="form-group text-center">
                            <button class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>